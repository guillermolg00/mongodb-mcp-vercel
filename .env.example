# MongoDB Connection
# Use a read-only user for security. Example role: { role: "read", db: "your_database" }
MONGODB_URI=mongodb+srv://readonly_user:password@cluster.mongodb.net/?retryWrites=true&w=majority

# Database name
MONGODB_DB=your_database_name

# API Key for authentication
# All requests must include header: X-API-Key: your_api_key
API_KEY=your_secure_api_key_here
